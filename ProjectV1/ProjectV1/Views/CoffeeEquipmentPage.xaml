<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="White"
             x:Class="ProjectV1.Views.CoffeeEquipmentPage">
    <ContentPage.Content>
        <Grid RowDefinitions="*,Auto,Auto,*">

            <Label
                x:Name="LabelCount"
                Text=" "/>

            <Image 
                Grid.Row="0"
                Source="/images/golfImg.jpg"/>

            <Button
                x:Name="ClickerButton"
                Clicked="MembersButton_Clicked"
                Grid.Row="3"
                Grid.Column="0"
                Text="Members"/>
            
            <Button
                x:Name="MemebersButton"
                Clicked="MembersButton_Clicked"
                Grid.Row="3"
                Grid.Column="0"
                Text="Members"/>
            <Button
                x:Name="SubmitScoreButton"
                Clicked="SubmitScoreButton_Clicked"
                Grid.Row="3"
                Grid.Column="1"
                Text="Submit Score"/>
            <Button
                x:Name="ViewScoreButton"
                Clicked="ViewScoreButton_Clicked"
                Grid.Row="3"
                Grid.Column="2"
                Text="View Score"/>

        </Grid>

    </ContentPage.Content>
</ContentPage>